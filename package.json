{
  "name": "chronos",
  "version": "1.0.0",
  "description": "Tool to pull Wikipedia event data; Node server to serve the data",
  "type": "commonjs",
  "files": [
    "bin"
  ],
  "bin": {
    "chronos": "./bin/index.js"
  },
  "lint-staged": {
    "{,tools}/**/*.{js,ts}": [
      "npm run pretty",
      "npm run lint"
    ]
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copyfiles": "ts-node ./utils/copyfiles.ts",
    "build:server": "npm run clean && npx tsc --project tsconfig.server.json && npm run copyfiles",
    "start": "ts-node --project tsconfig.server.json ./server/index.ts",
    "build:tools": "tsc --project tsconfig.json",
    "test": "echo 'Tests not set up!'",
    "pretty": "prettier --write \"{,!(node_modules|bin|dist|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "lint": "eslint \"{,!(node_modules|bin|dist)/**/}*.{js,ts}\" --fix",
    "prepare": "husky install"
  },
  "author": "bakuzan",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.2",
    "@types/express": "^4.17.14",
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "chalk": "^4.1.2",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "better-sqlite3": "^7.6.2",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "figlet": "^1.5.2",
    "got": "^11.8.5",
    "pug": "^3.0.2"
  }
}
